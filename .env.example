# ===================================================================
# GENIQ - Environment Variables Example
# ===================================================================
# Copy this file to .env and update the values as needed.
# For production, set these variables in your hosting provider.
# ===================================================================

# =======================
# Application Settings
# =======================
NODE_ENV=development  # Set to 'production' in production

# =======================
# Frontend Configuration
# =======================
VITE_API_URL=/api
VITE_API_KEY=dev_test_key_123  # Change this in production
VITE_BACKEND_URL=http://localhost:5000  # Update for production
VITE_GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# =======================
# Backend Configuration
# =======================
PORT=5000
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=30d

# =======================
# Security
# =======================
# Rate limiting (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# =======================
# CORS Configuration
# =======================
FRONTEND_URL=http://localhost:5173  # Update with your frontend URL in production

# =======================
# Google AI Configuration
# =======================
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# =======================
# Database (if applicable in the future)
# =======================
# DB_HOST=localhost
# DB_USER=user
# DB_PASS=password
# DB_NAME=geniq_db
# DB_PORT=5432

# =======================
# Logging
# =======================
LOG_LEVEL=debug  # debug, info, warn, error

# =======================
# Feature Flags
# =======================
# Enable/disable features as needed
ENABLE_ANALYTICS=false
ENABLE_MAINTENANCE_MODE=false
