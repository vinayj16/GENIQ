# ===================================================================
# GENIQ - Environment Variables Example
# ===================================================================
# Copy this file to .env in the root directory for local development.
# For production, set these variables in your hosting provider.
# ===================================================================

# =======================
# Application Settings
# =======================
NODE_ENV=development  # Set to 'production' in production

# =======================
# Frontend Configuration (Used by Vite)
# =======================
VITE_API_URL=/api
VITE_API_KEY=dev_test_key_123  # Change this in production
VITE_BACKEND_URL=http://localhost:5000  # Update for production

# =======================
# Backend Configuration
# =======================
PORT=5000
JWT_SECRET=your_secure_jwt_secret_here  # Generate a strong secret
JWT_EXPIRES_IN=30d

# =======================
# Security
# =======================
# Rate limiting (in milliseconds)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Max requests per window per IP

# =======================
# CORS Configuration
# =======================
FRONTEND_URL=http://localhost:5173  # Update with your frontend URL in production
CORS_ORIGIN=http://localhost:5173   # Allow CORS for the frontend

# =======================
# AI Configuration
# =======================
GOOGLE_AI_API_KEY=your_google_ai_api_key_here  # Required for AI features

# =======================
# Logging
# =======================
LOG_LEVEL=info  # debug, info, warn, error

# =======================
# Feature Flags
# =======================
ENABLE_ANALYTICS=false
ENABLE_MAINTENANCE_MODE=false

# =======================
# Deployment (Set by hosting provider)
# =======================
# These are automatically set by most hosting providers
# NODE_ENV=production
# PORT=10000
# HOST=0.0.0.0
